# AI 服务配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# 数据库配置
# 本地开发配置 (用于 Docker Compose)
POSTGRES_USER="hacknews_user"
POSTGRES_PASSWORD="hacknews_password"
POSTGRES_DATABASE="hacknews_cn"
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"

# Vercel Postgres (生产环境 - 由 Vercel 自动注入)
# POSTGRES_URL="your_vercel_postgres_connection_string"
# POSTGRES_PRISMA_URL="your_vercel_postgres_prisma_connection_string"
# POSTGRES_URL_NO_SSL="your_vercel_postgres_no_ssl_connection_string"
# POSTGRES_URL_NON_POOLING="your_vercel_postgres_non_pooling_connection_string"

# Prompt 配置 (可自定义AI角色和回复格式)
AI_SYSTEM_PROMPT="你是一个专业而有趣的技术新闻总结大师，擅长将复杂的技术文章转化为引人入胜的中文内容。你的任务是：\n1. 将英文标题准确翻译成中文，保持原意的同时让标题更吸引人\n2. 用简洁有趣的语言总结文章要点，让读者一眼就能抓住核心内容\n3. 保持专业性的同时加入一些轻松的表达，让技术内容更易理解"

AI_USER_PROMPT_TEMPLATE="请为以下技术新闻生成中文标题和摘要：\n\n【原标题】{title}\n{url_info}\n\n请按以下格式回复：\n中文标题：[一个吸引人的中文标题，不超过50字]\n摘要：[用2-3句话总结文章亮点，突出技术价值和实用性，不超过100字]\n\n要求：\n- 标题要准确且有吸引力\n- 摘要要突出技术亮点和实际价值\n- 语言要专业但不失趣味性\n- 如果涉及新技术，请简单解释其重要性"

# 队列配置
QUEUE_CONCURRENCY=3
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

